    <Text
            ohos:id="$+id:textLeft"
            ohos:width="120px"
            ohos:height="250px"
            ohos:text_size="15vp"
            ohos:text="左边"
            ohos:top_margin="15vp"
            ohos:align_parent_left="true"
            ohos:text_alignment="center"
            ohos:multiple_lines="true"
            ohos:left_padding="10px"
            ohos:text_color="white"
            ohos:text_font="serif"/>
    <Text
            ohos:id="$+id:textCenter"
            ohos:width="208px"
            ohos:height="208px"
            ohos:text_size="15fp"
            ohos:text="中间"
            ohos:top_margin="26vp"
            ohos:text_alignment="center"
            ohos:end_of="$id:textLeft"
            ohos:text_color="white"
            ohos:text_font="serif"/>
    <Text
            ohos:id="$+id:textRight"
            ohos:width="120px"
            ohos:height="250px"
            ohos:text_size="15fp"
            ohos:text="右边"
            ohos:top_margin="15vp"
            ohos:align_parent_right="true"
            ohos:text_alignment="center"
            ohos:text_color="white"
            ohos:right_padding="10px"
            ohos:text_font="serif"/>
    <Button
            ohos:id="$+id:btnStart"
            ohos:width="match_parent"
            ohos:height="match_parent"
            ohos:text_size="19fp"
            ohos:text="点击开始"
            ohos:align_parent_end="true"
            ohos:below="$id:textLeft"
            ohos:italic="false"
            ohos:text_weight="15"
            ohos:text_color="white"
            ohos:top_margin="40vp"
            ohos:bottom_padding="8vp"
            ohos:right_padding="80vp"
            ohos:left_padding="80vp"
            ohos:background_element="$graphic:button_element"
            ohos:text_font="serif"/>
</DependentLayout>